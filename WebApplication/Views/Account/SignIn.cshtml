@model WebApplication.ViewModels.SignInVm

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-sm-offset-4 col-sm-4">
        @using (Html.BeginForm("SignIn", "Account", FormMethod.Post))
        {
            <h2>SIGN IN</h2>
            <div class="form-group">
                <label for="Username">USERNAME</label>
                @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(x => x.Username)
            </div>
            <div class="form-group">
                <label for="Password">PASSWORD</label>
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <div class="form-group">
                <label for="AuthenticationCode">AUTHORIZATION CODE</label>
                @Html.PasswordFor(x => x.AuthenticationCode, new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(x => x.AuthenticationCode)
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">SIGN IN</button>
            </div>
        }
    </div>
</div>

